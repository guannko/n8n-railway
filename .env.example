# n8n Railway Environment Variables
# Railway will auto-configure PostgreSQL variables

# === REQUIRED: Set these manually ===
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin@brainindex.com
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# === Auto-configured by Railway (don't touch) ===
# DB_TYPE=postgresdb
# DB_POSTGRESDB_DATABASE=${{Postgres.PGDATABASE}}
# DB_POSTGRESDB_HOST=${{Postgres.PGHOST}}
# DB_POSTGRESDB_PASSWORD=${{Postgres.PGPASSWORD}}
# DB_POSTGRESDB_PORT=${{Postgres.PGPORT}}
# DB_POSTGRESDB_USER=${{Postgres.PGUSER}}

# === n8n Configuration ===
N8N_HOST=${{RAILWAY_PUBLIC_DOMAIN}}
WEBHOOK_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}/
N8N_PORT=5678

# === Optional: Advanced Settings ===
# N8N_ENCRYPTION_KEY=generate_random_32_char_string
# EXECUTIONS_DATA_PRUNE=true
# EXECUTIONS_DATA_MAX_AGE=168
# N8N_METRICS=true
